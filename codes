#INDEX.JS
const display = document.getElementById("display");

function appendToDisplay(input){
    display.value += input;
    display.classList.remove("slide");
    void display.offsetWidth;
    display.classList.add("slide");
}

function clearDisplay(){
    display.value = "";
}

function solve(){
    try{
        display.value = eval(display.value);
    }
    catch(error){
        display.value = "Invalid Entry";
    }
}

function appendToDisplay(input) {
    display.value += input;
    display.classList.remove("pop");
    void display.offsetWidth;
    display.classList.add("pop");
}

function solve() {
    try {
        display.value = eval(display.value);
    } catch (error) {
        // Trigger shake animation
        display.classList.add("error");

        // Remove the class after animation ends so it can be reused
        setTimeout(() => {
            display.classList.remove("error");
        }, 400);
    }
}

function appendToDisplay(input) {
    display.value += input;

    // Easter egg: if the user types 7092007, show your name
    if (display.value === "7092007") {
        display.value = "Vishal ðŸŽ‰";
    }
}

if (display.value === "7092007") {
    display.value = "Vishal ðŸŽ‰";
    display.classList.add("easter");

    setTimeout(() => {
        display.classList.remove("easter");
    }, 600);
}

if (display.value === "7092007") {
    alert("Happy Birthday Vishal! ðŸŽ‚");
}

function solve() {
    try {
        let result = eval(display.value);

        if (result === Infinity || result === -Infinity) {
            display.value = "Infinity";
            display.classList.add("spin");

            // Stop spinning after 3 seconds (optional)
            setTimeout(() => {
                display.classList.remove("spin");
            }, 1000);
        } else {
            display.value = result;
        }
    } catch (error) {
        // Handle invalid input with shake
        display.classList.add("error");
        setTimeout(() => {
            display.classList.remove("error");
        }, 400);
    }
}


